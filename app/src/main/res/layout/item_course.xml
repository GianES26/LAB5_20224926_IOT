<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del curso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Indicador de categorÃ­a -->
            <View
                android:id="@+id/viewCategoryIndicator"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@color/primary_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Nombre del curso -->
                <TextView
                    android:id="@+id/textCourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Curso"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Comunicaciones Ã“pticas" />

                <!-- CategorÃ­a -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/textCategoryIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/textCourseCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obligatorio"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:text="Obligatorio" />

                </LinearLayout>

            </LinearLayout>

            <!-- MenÃº de opciones -->
            <ImageView
                android:id="@+id/imageMenuOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Opciones del curso" />

        </LinearLayout>

        <!-- InformaciÃ³n de frecuencia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_frequency"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequency"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cada 3 dÃ­as"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                tools:text="Cada 3 dÃ­as" />

        </LinearLayout>

        <!-- PrÃ³xima sesiÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_session"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textNextSession"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hoy, 15:30"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                tools:text="Hoy, 15:30" />

            <!-- Indicador de urgencia -->
            <TextView
                android:id="@+id/textUrgencyIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡HOY!"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/background_urgency_indicator"
                android:padding="4dp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>